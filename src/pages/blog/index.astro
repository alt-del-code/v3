---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface BlogSchema {
  title: string;
  publishDate: Date;
  author: string;
  excerpt: string;
  featuredImage: string;
  categories: string[];
  meta: {
    title: string;
    description: string;
  };
}

type BlogPost = CollectionEntry<'blog'>;

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);
---

<Layout 
  title="Blog - Latest Posts and Updates"
  description="Read our latest blog posts, articles, and updates about our work and industry insights."
>
  <main class="container mx-auto px-4 py-16">
    <h1 class="text-4xl md:text-5xl font-bold mb-12 text-center" data-aos="fade-up">
      Manufacturing Insights & Updates
    </h1>

    <div class="mb-8 text-center" data-aos="fade-up">
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Stay updated with the latest trends, technologies, and best practices in manufacturing, 
        metal fabrication, and industrial innovation.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedPosts.map((post, index) => (
        <article 
          class="bg-white dark:bg-dark-surface rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          {post.data.featuredImage && (
            <div class="aspect-video overflow-hidden">
              <Image
                src={post.data.featuredImage}
                alt={post.data.title}
                class="w-full h-full object-cover"
                width={800}
                height={450}
              />
            </div>
          )}
          
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 mb-2">
              <span>{post.data.publishDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}</span>
              <span class="mx-2">â€¢</span>
              <span>{post.data.author}</span>
            </div>
            
            <h2 class="text-xl font-semibold mb-2 hover:text-primary">
              <a href={`/blog/${post.id}`}>
                {post.data.title}
              </a>
            </h2>
            
            <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
              {post.data.excerpt}
            </p>
            
            <div class="flex flex-wrap gap-2">
              {post.data.categories?.map((category: string) => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-sm rounded-full">
                  {category}
                </span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </main>
</Layout> 